<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar" />

        <ImageView
            android:id="@+id/background_profile"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/actionbar"
            android:scaleType="fitXY"
            android:src="@drawable/header_view_bg" />

        <TextView
            android:id="@+id/name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/avatar_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:text="NGUYEN DINH DUC"
            android:textSize="28sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avatar_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/background_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-35dp"
            android:src="@drawable/ic_guest_circle_black_48dp"
            app:border_color="#ffffff"
            app:border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar_icon"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cardview_height"
                        android:padding="@dimen/cardview_padding"
                        android:text="Contact" />

                    <View style="@style/Divider" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cardview_height"
                        android:padding="@dimen/cardview_padding"
                        android:text="dinhduc0605@gmail.com" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cardview_height"
                        android:padding="@dimen/cardview_padding"
                        android:text="01694949947" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cardview_height"
                        android:padding="@dimen/cardview_padding"
                        android:text="20 Nguyen Khoai - Hoang Mai - Ha Noi" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cardview_height"
                        android:padding="@dimen/cardview_padding"
                        android:text="About" />

                    <View style="@style/Divider" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cardview_height"
                        android:padding="@dimen/cardview_padding"
                        android:text="06/05/1994" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/cardview_height"
                        android:padding="@dimen/cardview_padding"
                        android:text="Male" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>